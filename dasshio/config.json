{
  "name": "Dasshio",
  "version": "0.5.0",
  "slug": "dasshio",
  "description": "Use Amazon Dash Buttons in Home Assistant",
  "url": "https://github.com/brmo/dasshio",
  "startup": "services",
  "boot": "auto",
  "host_network": true,
  "homeassistant_api": true,
  "image": "brmo/{arch}-dasshio",
  "options": {
    "timeout": 20,
    "buttons": [
      {
        "name": "null",
        "address": "null",
        "domain": "",
        "service": "",
        "service_data": ""
      }
    ]
  },
  "schema": {
    "timeout": "int",
    "buttons": [
      {
        "name": "str",
        "address": "str",
        "url": "str?",
        "getreq": "bool",
        "headers": "str?",
        "body": "str?",
        "domain": "str?",
        "service": "str?",
        "service_data": "str?"
      }
    ]
  }
}
